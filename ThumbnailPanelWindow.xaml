<Window x:Class="ComicReader.ThumbnailPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🖼️ Miniaturas" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Barra de título -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryBrush}" 
                Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🖼️ Panel de Miniaturas" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                <TextBlock Text="Haz clic en cualquier página para navegarla" 
                          FontSize="12" 
                          Foreground="White" 
                          Opacity="0.8"
                          Margin="20,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Área de miniaturas -->
        <ScrollViewer x:Name="ThumbnailScrollViewer" 
                      Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      Padding="10">
            <Grid x:Name="ThumbnailsGrid">
                <!-- Las miniaturas se añaden dinámicamente -->
            </Grid>
        </ScrollViewer>
        
        <!-- Barra inferior -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryBrush}" 
                Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Presiona ESC para cerrar" 
                          FontSize="12" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>
                <Button x:Name="CloseButton"
                        Content="✕ Cerrar" 
                        Width="80" 
                        Height="30"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>