<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
                    <!-- Estilo para panel de miniaturas -->
                    <Style x:Key="ThumbnailBorderStyle" TargetType="Border">
                        <Setter Property="Background" Value="#FFF200"/>
                        <Setter Property="BorderBrush" Value="#222222"/>
                        <Setter Property="BorderThickness" Value="3"/>
                        <Setter Property="CornerRadius" Value="10"/>
                        <Setter Property="Margin" Value="5,5,5,5"/>
                    </Style>
                    <Style x:Key="ThumbnailTextStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Comic Sans MS"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#222222"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                    </Style>

                    <!-- Estilo para overlays y modo nocturno -->
                    <Style x:Key="NightModeOverlayStyle" TargetType="Rectangle">
                    <Setter Property="Fill" Value="#B3000000"/>
                    <Setter Property="RadiusX" Value="0"/>
                    <Setter Property="RadiusY" Value="0"/>
                    </Style>

                    <!-- Estilo para indicador flotante de página -->
                    <Style x:Key="PageProgressIndicatorStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Comic Sans MS"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Background" Value="#0096FF"/>
                        <Setter Property="Padding" Value="8,4"/>
                    </Style>

                    <!-- Estilo para mensajes y overlays de error -->
                    <Style x:Key="ErrorOverlayStyle" TargetType="Border">
                        <Setter Property="Background" Value="#CCFF2D2D"/>
                        <Setter Property="BorderBrush" Value="#222222"/>
                        <Setter Property="BorderThickness" Value="4"/>
                        <Setter Property="CornerRadius" Value="12"/>
                        <Setter Property="Padding" Value="20"/>
                    </Style>

                    <!-- Estilo para barra de controles inferior -->
                    <Style x:Key="FooterButtonStyle" BasedOn="{StaticResource ComicButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#0096FF"/>
                        <Setter Property="Foreground" Value="#FFF200"/>
                        <Setter Property="BorderBrush" Value="#222222"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Style>
    <!-- Colores vibrantes estilo cómic -->
    <Color x:Key="ComicYellow">#FFF200</Color>
    <Color x:Key="ComicRed">#FF2D2D</Color>
    <Color x:Key="ComicBlue">#0096FF</Color>
    <Color x:Key="ComicBlack">#222222</Color>
    <Color x:Key="ComicWhite">#FFFFFF</Color>
    <Color x:Key="ComicGray">#F5F5F5</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFF200"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#0096FF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComicAccentBrush" Color="#FF2D2D"/>
    <SolidColorBrush x:Key="ComicBorderBrush" Color="#222222"/>

    <!-- Estilos de texto -->
    <Style x:Key="AppTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#222222"/>
    </Style>
    <Style x:Key="ComicButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Background" Value="#FF2D2D"/>
        <Setter Property="BorderBrush" Value="#222222"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5,5,5,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="WindowControlButton" TargetType="Button">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#222222"/>
        <Setter Property="Background" Value="#FFF200"/>
        <Setter Property="BorderBrush" Value="#222222"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="Margin" Value="2,2,2,2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <!-- Otros estilos para paneles, miniaturas, overlays, etc. -->
</ResourceDictionary>
