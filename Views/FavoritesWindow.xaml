<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ComicReader.Views.FavoritesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Favoritos y Colecciones" 
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8FAFC">

    <Window.Resources>
        <!-- Estilos Reutilizables -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6366F1" Padding="25,20">
            <StackPanel>
                <TextBlock Text="⭐ FAVORITOS Y COLECCIONES" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Organiza y gestiona tus cómics favoritos en colecciones personalizadas" 
                           FontSize="14" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Colecciones -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="📚 COLECCIONES" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF374151" Margin="0,0,0,15"/>
                    
                    <Button Style="{StaticResource ModernButtonStyle}"
                            Background="#FF10B981" Foreground="White"
                            Click="CreateCollection_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Nueva Colección"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernButtonStyle}"
                            Background="#FF3B82F6" Foreground="White"
                            Click="RenameCollection_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✏️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Renombrar"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernButtonStyle}"
                            Background="#FF8B5CF6" Foreground="White"
                            Click="DuplicateCollection_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Duplicar"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernButtonStyle}"
                            Background="#FFEF4444" Foreground="White"
                            Click="DeleteCollection_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🗑️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Eliminar Colección"/>
                        </StackPanel>
                    </Button>

                    <ListBox Name="CollectionsListBox" BorderThickness="0" Background="Transparent"
                             SelectionChanged="CollectionsListBox_SelectionChanged" Margin="0,10,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF3F4F6" CornerRadius="8" Padding="12" Margin="0,2">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Renombrar" Click="RenameCollection_Click"/>
                                            <MenuItem Header="Duplicar" Click="DuplicateCollection_Click"/>
                                            <Separator/>
                                            <MenuItem Header="Eliminar" Click="DeleteCollection_Click"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="14" Height="14" CornerRadius="7" Margin="0,2,10,0"
                                                Background="{Binding Color}"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} cómics'}" 
                                                       Foreground="#FF6B7280" FontSize="12"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="#FF9CA3AF" FontSize="11" 
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Panel Derecho - Contenido de Colección -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,10,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de Colección -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Name="CollectionTitleText" Text="Selecciona una colección" 
                                   FontSize="20" FontWeight="Bold" Foreground="#FF374151" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource ModernButtonStyle}"
                                Background="#FF3B82F6" Foreground="White"
                                Click="AddToCollection_Click" Margin="20,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📖" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Agregar Cómic"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButtonStyle}"
                                Background="#FF2563EB" Foreground="White"
                                Click="AddFolderToCollection_Click" Margin="5,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📂" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Agregar Carpeta"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButtonStyle}"
                                Background="#FFEF4444" Foreground="White"
                                Click="RemoveSelected_Click" Margin="5,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Quitar seleccionados"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Text="Resultados: " Margin="20,0,4,0" VerticalAlignment="Center" Foreground="#FF6B7280"/>
                        <TextBlock VerticalAlignment="Center" Foreground="#FF374151" FontWeight="SemiBold"
                                   Text="{Binding ElementName=FavoritesListBox, Path=Items.Count}"/>
                    </StackPanel>

                    <!-- Filtros y Búsqueda -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBox Name="SearchTextBox" Width="300" Padding="10" FontSize="14"
                                 BorderBrush="#FFD1D5DB" BorderThickness="1" VerticalAlignment="Center"
                                 TextChanged="SearchTextBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="White" BorderBrush="#FFD1D5DB" 
                                                        BorderThickness="1" CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="10"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock Text="🔍 Buscar en colección" Foreground="#FF9CA3AF" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Lista de Cómics en Colección -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ListBox Name="FavoritesListBox" BorderThickness="0" Background="Transparent"
                                 SelectionMode="Extended" AllowDrop="True"
                                 DragOver="FavoritesListBox_DragOver" Drop="FavoritesListBox_Drop">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF9FAFB" CornerRadius="10" Padding="15" Margin="0,5"
                                            BorderBrush="#FFE5E7EB" BorderThickness="1">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Abrir" Click="OpenFavorite_Click"/>
                                                <MenuItem Header="Mostrar en carpeta" Click="ShowInFolderFromItem_Click"/>
                                                <Separator/>
                                                <MenuItem Header="Quitar de colección" Click="RemoveFromCollection_Click"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Miniatura -->
                                            <Border Grid.Column="0" Width="60" Height="80" CornerRadius="6" Background="#FFE5E7EB">
                                                <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Información -->
                                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Foreground="#FF111827"/>
                                                <TextBlock Text="{Binding Author}" FontSize="12" Foreground="#FF6B7280" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding DateAdded, StringFormat='{}Agregado: {0:dd/MM/yyyy}'}" FontSize="11" Foreground="#FF9CA3AF" Margin="0,5,0,0"/>
                                                <ProgressBar Minimum="0" Maximum="100" Height="6" Margin="0,6,50,0" Value="{Binding Progress, Mode=OneWay}" Background="#FFE5E7EB" Foreground="#FF3B82F6"/>
                                                <TextBlock Text="{Binding RatingStars}" FontSize="14" Margin="0,6,0,0"/>
                                            </StackPanel>

                                            <!-- Acciones -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Style="{StaticResource ModernButtonStyle}" Background="#FF10B981" Foreground="White" Width="40" Height="35" Click="OpenFavorite_Click" ToolTip="Abrir cómic">
                                                    <TextBlock Text="📖" FontSize="14"/>
                                                </Button>
                                                <Button Style="{StaticResource ModernButtonStyle}" Background="#FF60A5FA" Foreground="White" Width="40" Height="35" Click="ShowInFolderFromItem_Click" ToolTip="Mostrar en carpeta" Margin="5,0,0,0">
                                                    <TextBlock Text="📂" FontSize="14"/>
                                                </Button>
                                                <Button Style="{StaticResource ModernButtonStyle}" Background="#FFEF4444" Foreground="White" Width="40" Height="35" Click="RemoveFromCollection_Click" ToolTip="Quitar de colección" Margin="5,0,0,0">
                                                    <TextBlock Text="🗑️" FontSize="14"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFF3F4F6" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource ModernButtonStyle}"
                        Background="#FF8B5CF6" Foreground="White"
                        Click="ExportCollections_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Exportar"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButtonStyle}"
                        Background="#FF059669" Foreground="White"
                        Click="ImportCollections_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📥" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Importar"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButtonStyle}"
                        Background="#FF6B7280" Foreground="White"
                        Click="CloseWindow_Click">
                    <TextBlock Text="Cerrar"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>