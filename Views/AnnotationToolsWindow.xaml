<Window x:Class="ComicReader.Views.AnnotationToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📝 Herramientas de Anotación" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ColorButton">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Panel principal -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" Text="📝 Anotaciones y Marcadores" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2196F3" 
                       Margin="0,0,0,20"/>

            <!-- Lista de anotaciones -->
            <GroupBox Grid.Row="1" Header="📋 Anotaciones Existentes">
                <ListView ItemsSource="{Binding Annotations}" 
                          SelectedItem="{Binding SelectedAnnotation}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tipo" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding TypeIcon}" FontSize="16" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Cómic" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ComicPath}" 
                                                   FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Página" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PageNumber}" 
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Texto" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Text}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   FontStyle="Italic"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Color" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="20" Height="20" 
                                                 Fill="{Binding ColorBrush}"
                                                 Stroke="Gray"
                                                 StrokeThickness="1"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Fecha" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CreatedDate, StringFormat='dd/MM/yyyy'}" 
                                                   FontSize="10"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Panel de herramientas -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Herramientas de anotación -->
            <GroupBox Grid.Row="0" Header="🛠️ Crear/Editar Anotación" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <!-- Tipo de anotación -->
                    <TextBlock Text="Tipo de Anotación:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox SelectedValue="{Binding CurrentAnnotationType}" Margin="0,0,0,15">
                        <ComboBoxItem Content="📝 Nota" Tag="Note"/>
                        <ComboBoxItem Content="🔆 Resaltado" Tag="Highlight"/>
                        <ComboBoxItem Content="🔖 Marcador" Tag="Bookmark"/>
                    </ComboBox>

                    <!-- Color -->
                    <TextBlock Text="Color:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <WrapPanel Margin="0,0,0,15">
                        <Button Style="{StaticResource ColorButton}" 
                                Background="Yellow" 
                                Tag="Yellow"
                                Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" 
                                Background="LightBlue" 
                                Tag="LightBlue"
                                Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" 
                                Background="LightGreen" 
                                Tag="LightGreen"
                                Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" 
                                Background="Pink" 
                                Tag="Pink"
                                Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" 
                                Background="Orange" 
                                Tag="Orange"
                                Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" 
                                Background="Violet" 
                                Tag="Violet"
                                Click="ColorButton_Click"/>
                    </WrapPanel>

                    <!-- Vista previa del color actual -->
                    <Border Background="{Binding CurrentColor}" 
                            Height="30" 
                            BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Margin="0,0,0,15">
                        <TextBlock Text="Color Seleccionado" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- Texto de anotación -->
                    <TextBlock Text="Texto:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CurrentText, UpdateSourceTrigger=PropertyChanged}" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Botones de acción -->
                    <StackPanel>
                        <Button Content="➕ Agregar Anotación" 
                                Style="{StaticResource ActionButton}"
                                Click="AddAnnotation_Click"/>
                        
                        <Button Content="✏️ Actualizar Seleccionada" 
                                Style="{StaticResource ActionButton}"
                                Background="#FF9800"
                                Click="UpdateAnnotation_Click"/>
                        
                        <Button Content="🗑️ Eliminar Seleccionada" 
                                Style="{StaticResource ActionButton}"
                                Background="#F44336"
                                Click="DeleteAnnotation_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Estadísticas -->
            <GroupBox Grid.Row="1" Header="📊 Estadísticas" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Border Background="#E3F2FD" Padding="10" CornerRadius="4" Margin="0,0,0,5">
                        <StackPanel>
                            <TextBlock Text="{Binding Annotations.Count}" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       Foreground="#2196F3"/>
                            <TextBlock Text="Total Anotaciones" 
                                       FontSize="11" 
                                       HorizontalAlignment="Center"
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Distribución por tipo (ejemplo estático) -->
                    <TextBlock Text="Por Tipo:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <StackPanel>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="📝 Notas" FontSize="11"/>
                            <ProgressBar Grid.Column="1" Value="60" Height="10" Margin="5,0" Background="#E0E0E0" Foreground="#4CAF50"/>
                            <TextBlock Grid.Column="2" Text="3" FontSize="11" FontWeight="Bold"/>
                        </Grid>

                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🔆 Resaltados" FontSize="11"/>
                            <ProgressBar Grid.Column="1" Value="30" Height="10" Margin="5,0" Background="#E0E0E0" Foreground="#FF9800"/>
                            <TextBlock Grid.Column="2" Text="1" FontSize="11" FontWeight="Bold"/>
                        </Grid>

                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🔖 Marcadores" FontSize="11"/>
                            <ProgressBar Grid.Column="1" Value="10" Height="10" Margin="5,0" Background="#E0E0E0" Foreground="#2196F3"/>
                            <TextBlock Grid.Column="2" Text="0" FontSize="11" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Botones de gestión -->
            <StackPanel Grid.Row="2">
                <Button Content="📤 Exportar Anotaciones" 
                        Style="{StaticResource ActionButton}"
                        Background="#9C27B0"
                        Click="ExportAnnotations_Click"/>
                
                <Button Content="📥 Importar Anotaciones" 
                        Style="{StaticResource ActionButton}"
                        Background="#607D8B"
                        Click="ImportAnnotations_Click"/>

                <Button Content="❌ Cerrar" 
                        Style="{StaticResource ActionButton}"
                        Background="#757575"
                        IsCancel="True" 
                        Click="CloseWindow_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>