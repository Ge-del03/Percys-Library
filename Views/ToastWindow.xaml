<Window x:Class="ComicReader.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False" Topmost="True" Width="300" Height="60" ResizeMode="NoResize">
    <Border Background="#DD111827" CornerRadius="8" Padding="12" Opacity="0.95">
        <TextBlock x:Name="MessageText" Foreground="White" TextWrapping="Wrap"/>
    </Border>
</Window>
