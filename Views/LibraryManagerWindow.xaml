<Window x:Class="ComicReader.Views.LibraryManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📚 Administrador de Bibliotecas" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox" x:Key="LibraryGroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo - Lista de bibliotecas -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" Text="📚 Mis Bibliotecas" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#2196F3" 
                       Margin="0,0,0,15"/>

            <!-- Lista de bibliotecas -->
            <ListView Grid.Row="1" ItemsSource="{Binding Libraries}" 
                      SelectedItem="{Binding SelectedLibrary}"
                      Margin="0,0,0,15">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Encabezado -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding StatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Margin="8,0,0,0" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Categoría -->
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding Category}" 
                                           FontSize="10" 
                                           Foreground="#666"
                                           Margin="0,2,0,5"/>

                                <!-- Descripción -->
                                <TextBlock Grid.Row="2" 
                                           Text="{Binding Description}" 
                                           FontSize="11" 
                                           Foreground="#888"
                                           TextWrapping="Wrap"
                                           MaxHeight="30"
                                           Margin="0,0,0,5"/>

                                <!-- Estadísticas -->
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding ComicCountText}" 
                                               FontSize="10" 
                                               Foreground="#4CAF50"
                                               FontWeight="Bold"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding DateCreated, StringFormat='dd/MM/yy'}" 
                                               FontSize="9" 
                                               Foreground="#999"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Crear nueva biblioteca -->
            <GroupBox Grid.Row="2" Header="➕ Nueva Biblioteca">
                <StackPanel Margin="5">
                    <TextBox Text="{Binding NewLibraryName, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="11"
                             Height="25" 
                             Margin="0,5"
                             VerticalContentAlignment="Center"
                             ToolTip="Nombre de la biblioteca"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding NewLibraryPath, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="10"
                                 Height="25" 
                                 VerticalContentAlignment="Center"
                                 ToolTip="Ruta de la carpeta (opcional)"/>
                        
                        <Button Grid.Column="1" 
                                Content="📁" 
                                Width="30" Height="25" 
                                FontSize="12"
                                Click="BrowsePath_Click"
                                ToolTip="Examinar carpeta"/>
                    </Grid>

                    <Button Content="➕ Crear Biblioteca" 
                            Style="{StaticResource ActionButton}"
                            FontSize="11"
                            Click="CreateLibrary_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Panel derecho - Contenido de la biblioteca -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado de la biblioteca seleccionada -->
            <Border Grid.Row="0" Background="#E3F2FD" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding SelectedLibrary.Name, FallbackValue='Selecciona una biblioteca'}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#1976D2"/>
                        
                        <TextBlock Text="{Binding SelectedLibrary.Description}" 
                                   FontSize="12" 
                                   Foreground="#666" 
                                   Margin="0,2,0,5"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁 " FontSize="12"/>
                            <TextBlock Text="{Binding SelectedLibrary.Path, FallbackValue='Sin ruta definida'}" 
                                       FontSize="11" 
                                       Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="✏️ Editar" 
                                Style="{StaticResource ActionButton}"
                                Background="#FF9800"
                                FontSize="11"
                                Click="EditLibrary_Click"/>
                        
                        <Button Content="🔄 Actualizar" 
                                Style="{StaticResource ActionButton}"
                                Background="#2196F3"
                                FontSize="11"
                                Click="RefreshLibrary_Click"/>
                        
                        <Button Content="🗑️ Eliminar" 
                                Style="{StaticResource ActionButton}"
                                Background="#F44336"
                                FontSize="11"
                                Click="DeleteLibrary_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contenido de la biblioteca -->
            <ListView Grid.Row="1" ItemsSource="{Binding LibraryContents}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Estado" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ReadStatusIcon}" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Título" Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Formato" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" 
                                            Padding="4,2" 
                                            CornerRadius="3">
                                        <TextBlock Text="{Binding Format}" 
                                                   FontSize="9" 
                                                   FontWeight="Bold"
                                                   Foreground="#1976D2"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Tamaño" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileSizeFormatted}" 
                                               FontSize="10"
                                               HorizontalAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Calificación" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RatingStars}" 
                                               FontSize="10"
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Agregado" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DateAdded, StringFormat='dd/MM/yyyy'}" 
                                               FontSize="9"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Última Lectura" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding LastRead, StringFormat='dd/MM/yyyy'}" 
                                               FontSize="9"
                                               Foreground="Gray"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <EventSetter Event="MouseDoubleClick" Handler="OpenComic_Click"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Panel inferior -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <TextBlock Text="{Binding LibraryContents.Count, StringFormat='Cómics mostrados: {}{0}'}" 
                           VerticalAlignment="Center" 
                           FontSize="11"
                           FontWeight="Medium" 
                           Margin="0,0,15,0"/>

                <Button Content="📤 Exportar" 
                        Style="{StaticResource ActionButton}"
                        Background="#9C27B0"
                        Click="ExportLibrary_Click"/>
                
                <Button Content="📥 Importar" 
                        Style="{StaticResource ActionButton}"
                        Background="#607D8B"
                        Click="ImportLibrary_Click"/>

                <Button Content="❌ Cerrar" 
                        Style="{StaticResource ActionButton}"
                        Background="#757575"
                        IsCancel="True" 
                        Click="CloseWindow_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>