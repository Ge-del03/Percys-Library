<UserControl x:Class="ComicReader.Views.ComicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">
    
    <UserControl.Resources>
        <LinearGradientBrush x:Key="DocumentBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFE8E8E8" Offset="0"/>
            <GradientStop Color="#FFD6D6D6" Offset="0.5"/>
            <GradientStop Color="#FFC8C8C8" Offset="1"/>
        </LinearGradientBrush>
        
        <Style x:Key="ComicPageStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Rectangle Fill="{StaticResource DocumentBackgroundBrush}"/>
        
        <ScrollViewer x:Name="ComicScrollViewer" 
                      Margin="0,35,0,50" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      Background="Transparent">
            
            <Grid MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                  MinHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ScrollViewer}}">
                
                <Border x:Name="ComicPageBorder"
                        Style="{StaticResource ComicPageStyle}"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        MaxWidth="800" MaxHeight="1200">
                    
                    <Image x:Name="imageViewer" 
                           Stretch="Uniform" 
                           StretchDirection="Both"/>
                    
                </Border>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="LoadingPanel" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="8" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Cargando..." FontSize="14" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
