<Window x:Class="ComicReader.Views.PresentationModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🎬 Modo Presentación" 
        Height="200" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="ToolWindow">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ControlButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎬 Modo Presentación" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentComicTitle}" 
                               Foreground="#E3F2FD" 
                               FontSize="12"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           Text="{Binding CurrentSlide}" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de progreso -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Progreso" 
                           FontSize="12" 
                           Foreground="#666" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,5"/>
                <ProgressBar Value="{Binding ProgressPercentage, Mode=OneWay}" 
                             Height="8" 
                             Background="#E0E0E0"
                             Foreground="#4CAF50"/>
                <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0:F0}%'}" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"
                           FontSize="10"
                           Foreground="#444"/>
            </StackPanel>

            <!-- Configuración del temporizador -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Intervalo:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                <Slider Value="{Binding CurrentSlideInterval}" 
                        Minimum="1" 
                        Maximum="30" 
                        Width="150" 
                        TickFrequency="1" 
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CurrentSlideInterval}" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"
                           FontWeight="Bold"
                           Foreground="#2196F3"/>
            </StackPanel>

            <!-- Controles -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="⏮️" 
                        Style="{StaticResource ControlButton}"
                        Background="#FF9800"
                        Click="ResetPresentation_Click"
                        ToolTip="Inicio"/>

                <Button Content="◀️" 
                        Style="{StaticResource ControlButton}"
                        Click="PreviousSlide_Click"
                        ToolTip="Anterior"/>

                <Button Content="{Binding PlayPauseIcon}" 
                        Style="{StaticResource ControlButton}"
                        Background="#4CAF50"
                        FontSize="16"
                        MinWidth="100"
                        Click="PlayPause_Click"
                        ToolTip="{Binding PlayPauseText}"/>

                <Button Content="▶️" 
                        Style="{StaticResource ControlButton}"
                        Click="NextSlide_Click"
                        ToolTip="Siguiente"/>

                <Button Content="❌" 
                        Style="{StaticResource ControlButton}"
                        Background="#F44336"
                        Click="ClosePresentation_Click"
                        ToolTip="Cerrar"/>
            </StackPanel>
        </Grid>

        <!-- Estado -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="15,5">
            <TextBlock Text="Modo Presentación" 
                       HorizontalAlignment="Center"
                       FontSize="11" 
                       Foreground="#666"/>
        </Border>
    </Grid>
</Window>